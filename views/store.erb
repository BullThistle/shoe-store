<h1><%= @store.name %></h1>
<hr>
<p>Carries: </p>
<ul>
  <% @brands.each do |brand| %>
  <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
  <br>
  <% end %>
</ul>
<br>
<br>
<form action="/stores/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn" type="submit" name="button">Delete Store</button>
</form>
<p>Edit store:</p>
<form action="/stores/<%= @store.id %>" method="post">
  <input type="text" name="name" id="name">
  <label for="name">Store Name</label>
  <input type="text" name="brands" id="brands">
  <label for="brands">Brands that carried by store (seperated by commas)</label>
  <br>
  <br>
  <button class="btn" type="submit">Edit Store</button>
</form>
